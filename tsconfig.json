{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@utils/*": [
        "src/utils/*"
      ],
      "@dto/*": [
        "src/dto/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@config/*": [
        "src/config/*"
      ]
    },
  },
  "exclude": ["node_modules", "dist"]
}
